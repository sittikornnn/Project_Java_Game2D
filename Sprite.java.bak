import java.awt.Image;

public class Sprite {

    private boolean visible; //you can see and can't see
    private Image image; // import image 
    private boolean dying; // die every thing

    int x; // position x
    int y; // position y
    int dx;

    public Sprite() {

        visible = true; // you can see image
    }

    public void die() {

        visible = false; // you can't see image
    }

    public boolean isVisible() {

        return visible; // sent parameter see
    }

    protected void setVisible(boolean visible) {

        this.visible = visible; // collect parameter see
    }

    public void setImage(Image image) {

        this.image = image; // collect image
    }

    public Image getImage() {

        return image;  // call image
    }

    public void setX(int x) {

        this.x = x; //collect position x
    }

    public void setY(int y) {

        this.y = y; //collect position y
    }

    public int getY() {

        return y; //call position y
    }

    public int getX() {

        return x; //call position x
    }

    public void setDying(boolean dying) {

        this.dying = dying; //set live or death
    }

    public boolean isDying() {

        return this.dying; // call live or death
    }
}